<% provide(:title, 'Edit user') %>
<% provide(:button, '更新') %>
<h1>マイページ</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

  </div>
  <div class="row">
    <div class="col-md-1 col-md-offset-3">
      <%= f.submit "更新", class: "btn btn-primary" , id: "login"%>
      <% end %>
    </div>
    <div class="col-md-1 col-md-offset-15">
      <%= link_to "キャンセル", root_path, class: "btn btn-lg btn-primary btn-sm", id: "cancel" %>
    </div>
    <div class="col-md-1 col-md-offset-25">
      <%= link_to "ログアウト", logout_path, class: "btn btn-lg btn-primary btn-sm", method: :delete , id: "login"%>
    </div>
  </div>
</div>
